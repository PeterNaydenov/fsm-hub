{
  "name": "@peter.naydenov/fsm-hub",
  "description": "FSM orchestration and state-managment tool",
  "version": "2.1.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./dist/fsm-hub.umd.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/fsm-hub.esm.mjs",
      "require": "./dist/fsm-hub.cjs",
      "default": "./dist/fsm-hub.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha test",
    "build": "rollup -c"
  },
  "dependencies": {
    "@peter.naydenov/stack": "3.0.0",
    "ask-for-promise": "2.0.3"
  },
  "devDependencies": {
    "@peter.naydenov/fsm": "5.2.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.2",
    "chai": "5.1.1",
    "mocha": "10.7.3",
    "rollup": "^4.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterNaydenov/fsm-hub.git"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "fsm",
    "state-managment",
    "orchestration"
  ]
}
